<h1>Listing Dogs</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @dogs.each do |dog| %>
    <div class="row">
  <div class="col-sm-6 col-md-3">
    <div class="thumbnail">
      <img src="photos/rusty.jpg" alt="this is a dog">
      <div class="caption">
        <h3><%= dog.name %></h3>
        <p>This is <%= dog.name %>'s profile</p>
        <p><%= link_to 'Show', dog, class: "btn btn-primary"%> <%= link_to 'Edit', edit_dog_path(dog), class: "btn btn-default" %><%= link_to 'Destroy', dog, class: "btn btn-default", method: :delete, data: { confirm: 'Are you sure?' } %></p>
      </div>
    </div>
  </div>
</div>
      <tr>
        <td><%= dog.name %></td>
        <td><%= link_to 'Show', dog %></td>
        <td><%= link_to 'Edit', edit_dog_path(dog) %></td>
        <td><%= link_to 'Destroy', dog, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

